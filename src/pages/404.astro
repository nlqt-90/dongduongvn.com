---
import BaseLayout from "@layouts/BaseLayout.astro";
import { url } from "@utils/url";
---

<BaseLayout title="404 | Page not found">

  <link rel="stylesheet" href={url("/assets/css/error.min.css")} />



    <main class=error>
        <div class=container><span class=error_number>404</span>
            <div class=error_message>
                <div class=error_message-header><span class=subtitle>Rất tiếc!</span>
                    <h3 class=title>Không tìm thấy trang</h3>
                </div>
                <p class=error_message-text>Xin lỗi, trang bạn đang tìm kiếm hiện không tồn tại.</p><a class=btn
                    href={url("/")}>Trang chủ</a>
            </div>
        </div>
    </main>


</BaseLayout>
